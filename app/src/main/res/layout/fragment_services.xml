<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/heroSection"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/backgrounds" />

                <!-- Dim Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8010912" />

                <!-- Centered Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/heroTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Services"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/heroSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover how Vic Power supports your community and environment with expert electrical services."
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:id="@+id/sectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What We Offer"
                    android:textSize="24sp"
                    android:textColor="#00264D"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/sectionSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We are committed to providing top-tier electrical services tailored to your needs."
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Services Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="16dp">

                    <!-- Service Card Example -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/background"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/serviceTitle1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Electrical Installation"
                                    android:textSize="18sp"
                                    android:textColor="#003366"
                                    android:textStyle="bold"
                                    android:paddingBottom="8dp"/>

                                <TextView
                                    android:id="@+id/serviceDesc1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Professional installation of electrical wiring, fixtures, and systems for residential and commercial buildings."
                                    android:textSize="14sp"
                                    android:textColor="#555555"
                                    android:paddingBottom="8dp"/>

                                <!-- Bullet Points -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Safe and compliant with electrical codes"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Energy-efficient solutions"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Custom designs to fit your requirements"
                                        android:textSize="12sp"
                                        android:textColor="#444444"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Service 2 Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/backgrounds"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Repairs &amp; Maintenance"
                                    android:textSize="18sp"
                                    android:textColor="#003366"
                                    android:textStyle="bold"
                                    android:paddingBottom="8dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Reliable repair services and regular maintenance to ensure your electrical systems operate safely and efficiently."
                                    android:textSize="14sp"
                                    android:textColor="#555555"
                                    android:paddingBottom="8dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Fast response times"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Preventive maintenance plans"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="• Up-to-date safety inspections"
                                        android:textSize="12sp"
                                        android:textColor="#444444"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <!-- Service 3 Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/solar_panels" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Renewable Energy Solutions"
                                    android:textSize="18sp"
                                    android:textColor="#003366"
                                    android:textStyle="bold"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Installation and consultation for solar panel systems and other renewable energy technologies."
                                    android:textSize="14sp"
                                    android:textColor="#555555"
                                    android:paddingBottom="8dp" />

                                <!-- Bullet Points -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Reduce your carbon footprint"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Government incentives and rebates"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Long-term energy savings"
                                        android:textSize="12sp"
                                        android:textColor="#444444"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Service 4 Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/electrical_inspection" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Safety Inspections"
                                    android:textSize="18sp"
                                    android:textColor="#003366"
                                    android:textStyle="bold"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comprehensive inspections to identify hazards and ensure compliance with all electrical safety standards."
                                    android:textSize="14sp"
                                    android:textColor="#555555"
                                    android:paddingBottom="8dp" />

                                <!-- Bullet Points -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Detailed inspection reports"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Recommendations for upgrades"
                                        android:textSize="12sp"
                                        android:textColor="#444444"
                                        android:paddingBottom="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="• Peace of mind for your home or business"
                                        android:textSize="12sp"
                                        android:textColor="#444444"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="8dp"
                android:background="#0056B3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Heading -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Power Up Your Project?"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:paddingBottom="12dp"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Vic Power today for a free consultation and let’s get your electrical needs sorted with expertise and care."
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:textAlignment="center"
                        android:lineSpacingExtra="2dp"
                        android:paddingBottom="16dp"
                        android:layout_marginHorizontal="8dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        />

                    <!-- Button -->
                    <Button
                        android:id="@+id/btnContact"                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Get in Touch"
                        android:textColor="#E2E5E8"
                        android:backgroundTint="#01030C"
                        android:textStyle="bold"
                        android:paddingVertical="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
